@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="row">
    <div class="col-md-4">
        <h3>Loan programs</h3>
        <table class="table-bordered">
            <tr><td><p>Loan type</p></td><td><p>Loan period</p></td><td><p>Maximum amount</p></td><td><p>Bid %</p></td></tr>
            @foreach (var credit in ViewBag.Credits)
            {
                <tr><td><p>@credit.Head</p></td><td><p>@credit.Period</p></td><td><p>@credit.Sum</p></td><td><p>@credit.Procent %</p></td></tr>
            }
        </table>
        <p><a asp-controller="Home" asp-action="CreateBid">Apply for a loan &raquo;</a></p>
    </div>
</div>
<div>
    <h5>
        View loan applicants
    </h5>
</div>
<div id="results"></div>

<form data-ajax="true"
      data-ajax-url="/Home/BidSearch"
      data-ajax-update="#results"
      data-ajax-mode="after"
      data-ajax-begin="funBegin"
      data-ajax-success="funSuccess"
      data-ajax-complete="funComplete">
    <input type="text" name="Name" />
    <input type="submit" value="Поиск" />
</form>
@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js" integrity="sha256-v2nySZafnswY87um3ymbg7p9f766IQspC5oqaqZVX2c=" crossorigin="anonymous"></script>
}
<script>
    function funBegin() {
        alert("Start Work ajax");
    }
    function funSuccess(data) {
        alert("Request completed, received:\n" + data);
        console.log(data);
    }
    function funComplete(request, status) {
        alert("Request status: \n" + status);
    }
</script>